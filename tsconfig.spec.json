{
  "compilerOptions": {
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["es2020"],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": false,
    "target": "ES2020",
    "composite": false,
    "tsBuildInfoFile": "build/tsconfig.tsbuildinfo"
  },
  "include": ["**/*.spec.ts", "**/*.spec.verify.ts"],
  "exclude": [
    "node_modules",
    "_incoming/**/*",
    "jest.config.ts",
    "build/**/*.ts"
  ]
}
