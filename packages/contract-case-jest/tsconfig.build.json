{
  "extends": "./tsconfig.json",
  "compilerOptions": { "module": "nodenext", "moduleResolution": "nodenext" },
  "include": ["src/**/*.ts", "bin"],
  "exclude": [
    "jest.config.ts",
    "dist/**/*.js",
    "example/*",
    "src/__tests__/*",
    "**/*.spec.verify.ts",
    "**/*.spec.ts",
    "**/*.spec-dont-run.ts",
    "**/*.test.ts",
    "coverage"
  ]
}
