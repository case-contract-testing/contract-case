{
  "name": "@contract-case/case-boundary",
  "version": "0.10.0",
  "description": "Exported interface layer for ContractCase. Don't depend on it directly unless you're writing a wrapper for a new language",
  "author": "Timothy Jones <timothy.l.jones@gmail.com> (https://github.com/TimothyJones)",
  "homepage": "https://case.contract-testing.io/docs/reference/matchers",
  "license": "BSD-3-Clause",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "directories": {
    "src": "src",
    "build": "build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/case-contract-testing/case.git"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "jsii",
    "build:docs": "api-extractor run --verbose && api-documenter markdown --input-folder api-extractor --output-folder docs && npm run format:fix",
    "build:docs:local": "api-extractor run --local --verbose && api-documenter markdown --input-folder api-extractor --output-folder docs && npm run format:fix",
    "prepackage": "rimraf dist",
    "prepack": "mkdirp node_modules/@contract-case && ln -sf ${PWD}/../case-entities node_modules/@contract-case/case-entities-internal",
    "postpack": "rimraf node_modules",
    "package": "jsii-pacmak",
    "publish:maven": "publib-maven",
    "lint": "eslint src --ext .ts --config .eslintrc.json",
    "lint:fix": "eslint src --fix --ext .ts --config .eslintrc.json",
    "format:base": "prettier \"{docs,src}/**/*.{ts,md}\"",
    "format:check": "npm run format:base -- --list-different",
    "format:fix": "npm run format:base -- --write "
  },
  "bugs": {
    "url": "https://github.com/case-contract-testing/case/issues"
  },
  "jsii": {
    "excludeTypescript": [
      "_incoming/**/*",
      "**/*.spec.ts",
      "jest.config.ts"
    ],
    "outdir": "dist",
    "versionFormat": "full",
    "tsc": {
      "outDir": "build",
      "forceConsistentCasingInFileNames": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true
    },
    "targets": {
      "java": {
        "package": "io.contract_testing.contractcase.case_boundary",
        "maven": {
          "groupId": "io.contract-testing.contractcase",
          "artifactId": "case_boundary"
        }
      }
    }
  },
  "devDependencies": {
    "@contract-case/case-maintainer-config": "0.0.4",
    "@contract-case/eslint-config-case-maintainer": "0.0.3",
    "@microsoft/api-documenter": "^7.23.9",
    "@microsoft/api-extractor": "^7.39.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@contract-case/case-core": "0.15.4",
    "@contract-case/case-entities-internal": "0.15.4",
    "read-pkg-up": "^7.0.1"
  },
  "bundledDependencies": [
    "@contract-case/case-core",
    "@contract-case/case-entities-internal",
    "read-pkg-up"
  ],
  "stability": "stable",
  "nx": {
    "tasksRunnerOptions": {
      "default": {
        "runner": "nx/tasks-runners/default",
        "options": {
          "cacheableOperations": [
            "build",
            "package",
            "lint",
            "format:check",
            "test"
          ]
        }
      }
    },
    "targetDefaults": {
      "prebuild": {
        "dependsOn": [
          "^prebuild"
        ]
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/build"
        ]
      },
      "build:docs": {
        "dependsOn": [
          "build"
        ],
        "outputs": "{projectRoot}/docs"
      },
      "package": {
        "dependsOn": [
          "build"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}
