{
  "name": "contract-case",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.15.8",
  "devDependencies": {
    "@tsconfig/node16": "^16.1.2",
    "example-extractor": "^0.0.4",
    "jsii-docgen": "^10.3.2",
    "lerna": "^8.1.3"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "19.3.0",
    "@nx/nx-darwin-x64": "19.2.3",
    "@nx/nx-linux-arm-gnueabihf": "19.3.0",
    "@nx/nx-linux-arm64-gnu": "19.2.3",
    "@nx/nx-linux-arm64-musl": "19.2.3",
    "@nx/nx-linux-x64-gnu": "19.1.0",
    "@nx/nx-linux-x64-musl": "19.2.3",
    "@nx/nx-win32-arm64-msvc": "19.2.3",
    "@nx/nx-win32-x64-msvc": "18.3.4"
  },
  "scripts": {
    "package": "lerna run package",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "extract-docs": "rimraf packages/documentation/docs/examples/generated && example-extractor -o packages/documentation/docs/examples/generated",
    "update-docs": "lerna run build:docs && jsii-docgen -p @contract-case/case-boundary -o docs/maintainers/reference/case-boundary-API.md",
    "test": "lerna run test",
    "test:verify": "lerna run test:verify"
  }
}
